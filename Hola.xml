<context>
    <input pattern="(hi|hello) *">
        <!-- Greet the user if we know his/her name -->
        <output if="full($UserName)">
            <item>Hello $UserName!</item>
            <item>¡Que onda $UserName!</item>
            <item>ohhhh!!! tambien te llamas $UserName!</item>
        </output>

        <!-- Or activate an inner context to ask the user about his/her name -->
        <context if="empty($UserName)" modal="true"> <!-- We use a modal context, so our bot will recognize any text as the user’s name -->
            <output value="Hi! What is your name?"/>

            <input pattern="$Text">
                <!-- Store the user’s name in the UserName variable with "user" scope to save it into database -->
                <var name="UserName" value="$Text" scope="user"/>
                <output value="Nice to meet you, $UserName!"/> <!-- Using the placeholder in output -->
            </input>
        </context>
    </input>
    
    <input pattern="(hola) *">
      <output value="Hola! Cúal es tu color favorito?"/>

      <context modal="true">
        <sample>
          <item>Green</item>
          <item>Blue</item>
          <item>Yellow</item>
        </sample>
        <input pattern="$Color">
          <var name="UserColor" value="$Color" scope="usercolores"/>
          <output value="Esta bien! El mio no! ¬¬"/>
        </input>
      </context>
    </input>


</context>
